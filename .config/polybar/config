[colors]
background = #162029
background-alt = #16405D
foreground = #BAB9AA
foreground-alt = #FFFFFF
primary = #36698B
secondary = #355458
alert = #9D1411
alert2 = #FF0600

[bar/main]
monitor = eDP-1
width = 100%
height = 28
bottom = true
fixed-center = true
locale = de_AT.UTF-8

background = ${colors.background}
foreground = ${colors.foreground}

module-margin = 2

font-0 = DejaVu Sans:pixelsize=10;2
font-1 = Font Awesome 5 Free:style=Solid:size=9;2
font-2 = Font Awesome 5 Free:style=Regular:size=9;2
font-3 = Font Awesome 5 Brands:style=Regular:size=9;2
font-4 = Font Awesome 5 Brands:style=Regular:size=10;2
font-5 = Font Awesome 5 Free:style=Regular:size=8;1

modules-left = i3
modules-center = date
modules-right = battery0 battery1 mpd volume

padding-right = 2
tray-position = right
tray-padding = 2
tray-maxsize = 16
tray-background = ${root.background}
wm-restack = i3

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
wrapping-scroll = false
pin-workspaces = false

; Workspace icons
ws-icon-0 = 10;%{T5}
ws-icon-1 = 1;%{T5}
ws-icon-2 = 2;%{T2}
ws-icon-3 = 3;%{T2}
ws-icon-4 = 4;%{T2}

label-mode-padding = 2

; focused = Active workspace on focused monitor
label-focused = %index%: %icon%
label-focused-background = ${colors.background-alt}
label-focused-foreground = ${colors.foreground-alt}
label-focused-underline = ${colors.primary}
label-focused-padding = 4

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%: %icon%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%: %icon%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

; split the workspace name on ':'
strip-wsnumbers = true

; Sort the workspaces by index instead of the default
; sorting that groups the workspaces by output
;index-sort = true

; Create click and scroll handler used to focus workspace
enable-click = true
enable-scroll = true

tray-transparent = true

[module/date]
type = internal/date
interval = 5

; See "man date" for details on how to format the date string
; NOTE: if you want to use syntax tags here you need to use %%{...}
date = "%A %d %B"
date-alt = "%A %Y-%m-%d"

time = "%H:%M"
time-alt = "%H:%M:%S"

label = "%{A3:gnome-calendar:}%{T6}%{T1}   %time%   %date%"

[module/volume]
type = internal/volume

format-volume = %{A3:pavucontrol:}<ramp-volume>%{A}
label-volume-foreground = ${root.foreground}

format-muted-foreground = ${colors.foreground-alt}
label-muted = ""

ramp-volume-0 = ""
ramp-volume-1 = ""
ramp-volume-2 = ""

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.primary}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-fill = ─
bar-volume-empty = ─

[module/battery0]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 99

format-charging = int: <animation-charging> <label-charging>
format-discharging = int: <ramp-capacity> <label-discharging>
format-full = int: <ramp-capacity> <label-full>

ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.alert2}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.alert2}
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
